package metodosTOCHO;

import java.util.Scanner;

public class Metodos {

	public static void main(String[] args) {
		Scanner teclado= new Scanner(System.in);
		
		double operacion;
		boolean par;
		boolean impar;
		long fact;
		
		int numero;
		double a,b;
		String Opcion;
		
		System.out.print("Dime un número a: ");
		a = teclado.nextDouble();
		System.out.print("Dime un número b: ");
		b = teclado.nextDouble();
		
		teclado.nextLine();
		
		System.out.println("Elige tu opción para calcular 'a' y 'b':" + "\n'+' para sumar." + "\n'-' para restar." + "\n'*' para multiplicar." + "\n'/' para dividir." + "\n'%' para calcular el resto.");
		Opcion = teclado.nextLine();
		char primerChar = Opcion.charAt(0);
		
		while (primerChar != '+' && primerChar != '-' && primerChar != '*'  && primerChar != '/' && primerChar != '%') {
			System.out.println("Opción incorrecta, solo puedes elegir el '+', '-', '*', '/', '%'. Intentalo de nuevo:");
			Opcion = teclado.nextLine();
			primerChar = Opcion.charAt(0);
		}
		
		
		numero = 3;
		par = esPar(numero);
		impar = esImpar(numero);
		fact = factorialNum(numero);
		operacion = operacionNum(a, b, primerChar);
		
		
		System.out.println("\n");
		System.out.println("¿Es par?: " + par);
		System.out.println("¿Es impar?: " + impar);
		System.out.println("El factorial es: " + fact);
		System.out.println("El resultado de la operación entre 'a' y 'b' es: " + operacion);
	}
	// EsPar calcula si un valor es par. Devielve un tipo booleano
	public static boolean esPar(int numero) {
		boolean par;
		if (numero % 2 == 0 ) {
			par = true;
		}
		else {
			par = false;
		}
	return par;
	}
	
	//  EsPar calcula si un valor es impar. Devielve un tipo booleano
	public static boolean esImpar(int numero) {
		boolean impar;
		if (numero % 2 != 0 ) {
			impar = true;
		}
		else {
			impar = false;
		}
	return impar;
	}
	
	// factorialNum calcula el factorial de un valor. Devuelve el resultado
	public static long factorialNum (int numero) {
		long fact = 1;														//Hace falta usar long porque los factoriales suelen dar resultados muy altos a partir de 10
            for (int condicion = 1; condicion <= numero; condicion++) {
                fact *= condicion;
            }
	return fact;
	}
	
	// operacionNum una sola operacion que el usuario eliga por teclado
	public static double operacionNum (double a, double b, char primerChar) {
		double operacion = 0;
			
			if (primerChar == '+') {
				operacion = a + b;
			}
			else if (primerChar == '-') {
				operacion = a - b;
			}
			else if (primerChar == '*') {
				operacion = a * b;
			}
			else if (primerChar == '/') {
				operacion = a / b;
			}
			else {
				operacion = a % b;
			}
		return operacion;
	}
}
