package metodosTOCHO;

public class Metodos {

	public static void main(String[] args) {
		
		int numero;
		boolean par;
		boolean impar;
		int factorial;
		
		numero = 3;
		par = esPar(numero);
		impar = esImpar(numero);
		factorial = factorialNum(numero);
		System.out.println(par);
		System.out.println(impar);
		System.out.println(factorial);
	}
	// EsPar calcula si un valor es par. Devielve un tipo booleano
	public static boolean esPar(int numero) {
		boolean par;
		if (numero % 2 == 0 ) {
			par = true;
		}
		else {
			par = false;
		}
	return par;
	}
	
	public static boolean esImpar(int numero) {
		boolean impar;
		if (numero % 2 != 0 ) {
			impar = true;
		}
		else {
			impar = false;
		}
	return impar;
	}
	
	public static int factorialNum (int numero) {
		int factorial = 0;
		for (int contador = 0; contador < numero; contador++) {
			numero *= (numero-1);
		}
	return factorial;
	}
}
