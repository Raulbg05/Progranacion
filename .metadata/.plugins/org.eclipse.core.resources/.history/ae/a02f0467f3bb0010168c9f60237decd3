package ejercicio2;

import java.util.Scanner;

public class Ejercicio2 {

	public static void main(String[] args) {
	Scanner teclado= new Scanner(System.in);
		
	String Texto, Texto1;
		
	System.out.print("Introduce un texto");
	Texto = teclado.nextLine();
	
	System.out.print("Introduce otro texto");
	Texto1 = teclado.nextLine();
	
	char[] Textochar;
	char[] Textochar1;
	
	Textochar = Texto.toCharArray();
	Textochar1 = Texto1.toCharArray();
	
		for (int posicion = 0; posicion <= Textochar.length; posicion++) {
			if (Textochar[posicion] != Textochar1[posicion]) {
				System.out.print("Los textos no son iguales");
			}
			else {
				System.out.print("Los textos son iguales");
			}
		}
		
	teclado.close();	
	}

}
