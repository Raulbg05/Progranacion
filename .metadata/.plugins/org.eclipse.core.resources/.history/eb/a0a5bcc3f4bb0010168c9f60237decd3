package ejercicio2;

import java.util.Scanner;

public class Ejercicio2 {

	public static void main(String[] args) {
	Scanner teclado= new Scanner(System.in);
		
	String Texto, Texto1;
	int contadorDiferente = 0, max;
		
	System.out.println("Introduce un texto:");
	Texto = teclado.nextLine();
	
	System.out.println("Introduce otro texto:");
	Texto1 = teclado.nextLine();
	
	char[] Textochar;
	char[] Textochar1;
	
	Textochar = Texto.toCharArray();
	Textochar1 = Texto1.toCharArray();
	
	max = Math.max(Textochar.length, Textochar1.length);
	
		for (int posicion = 0; posicion <= max; posicion++) {
			if (Textochar[posicion] != Textochar1[posicion]) {
				contadorDiferente++;
			}
		}
		
		if (contadorDiferente > 0) {
			System.out.print("Los textos son diferentes");
		}
		else {
			System.out.print("Los textos son iguales");
		}
		
	teclado.close();	
	}

}
